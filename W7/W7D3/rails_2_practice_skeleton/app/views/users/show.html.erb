<h1>Say hello to <%= @user.username %></h1>


<div>
  <p>These are <%= @user.username %> 's Goals: </p>
  <ul>
    <% @user.goals.each do |goal| %>
      <p><%= goal.name %></p>
      <p><%= goal.details %></p>
      <% if goal.status %>
        <p>Done</p>
      <% end %>
      <form action= <%= goal_url(goal) %> method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete Goal">
      </form>
    <% end %>
  </ul>

</div>


<h1>Add a New Goal</h1>

<form action="<%= user_goals_url(@user) %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
 
  <label for="name">Name</label>
  <input id="name" name="goal[name]">
  
  <label for="details">Details:</label>
  <input id="details" name="goal[details]">

  <p>Completed?</p>
  
  <label for="status">True</label>
  <input id="status" type="radio" name="goal[status]" value="true">
  <label for="status">False</label>
  <input id="status" type="radio" name="goal[status]" value="false">

  <input type="submit" value="Create Goal">

</form>